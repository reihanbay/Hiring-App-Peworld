<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".onboarding.OnBoardActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:alpha="0.8"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-20dp"
            android:background="@drawable/ic_vector_41"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="40dp"
            android:paddingHorizontal="16dp">
            <ImageView
                android:id="@+id/iv_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_second"/>

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="98dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Temukan developer berbakat &amp; terbaik di berbagai bidang keahlian"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/ll_between_btn"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="5dp"
                android:text="Sign In"
                android:textSize="16sp"
                android:textColor="@color/purple_500"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:fontFamily="@font/open_sans_bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_between_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <View
                    android:id="@+id/line_left"
                    app:layout_constraintEnd_toStartOf="@id/tv_but"
                    app:layout_constraintTop_toTopOf="@id/tv_but"
                    app:layout_constraintBottom_toBottomOf="@id/tv_but"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_but"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="atau"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:id="@+id/line_right"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/tv_but"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:background="@android:color/transparent"
                app:cornerRadius="5dp"
                app:strokeWidth="1dp"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:fontFamily="@font/open_sans_bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
