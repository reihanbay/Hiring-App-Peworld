<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:background="@color/background_gray"
            android:layout_height="wrap_content"
            tools:context=".profile.form.FormExperienceActivity">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/purple_500"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_main"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    />
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/bg_profile"
                android:elevation="1dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/ll_header"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengalaman"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black_gray2"
                            android:textSize="18sp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="20dp"
                            />
                        <ImageView
                            android:id="@+id/btn_delete"
                            android:src="@drawable/ic_baseline_delete"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="20dp"
                            android:visibility="gone"
                            app:tint="@color/red_1" />
                        <TextView
                            android:id="@+id/tv_edit"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="20dp"
                            android:text="Edit"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_blue_light"
                            android:fontFamily="@font/open_sans_semibold"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_form"
                    app:layout_constraintTop_toBottomOf="@id/ll_header"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_2"
                        android:text="Posisi"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="25dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <EditText
                        android:id="@+id/et_work_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_et_form_profile"
                        android:padding="15dp"
                        android:inputType="text"
                        android:hint="Masukan posisi kerja"
                        android:textColorHint="@color/gray_1"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_2"
                        android:text="Nama Perusahaan"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="25dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <EditText
                        android:id="@+id/et_company_name"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_et_form_profile"
                        android:padding="15dp"
                        android:hint="Masukan nama perusahaan"
                        android:textColorHint="@color/gray_1"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_2"
                        android:text="Tanggal Masuk"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="25dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <EditText
                        android:id="@+id/et_work_join"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_et_form_profile"
                        android:padding="15dp"
                        android:hint="Tanggal mulai bekerja"
                        android:textColorHint="@color/gray_1"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_2"
                        android:text="Tanggal Keluar"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="25dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <EditText
                        android:id="@+id/et_work_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_et_form_profile"
                        android:padding="15dp"
                        android:hint="Tanggal Keluar Kerja"
                        android:textColorHint="@color/gray_1"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_2"
                        android:text="Deskripsi Singkat"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="25dp"
                        android:fontFamily="@font/open_sans_regular"/>
                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_et_form_profile"
                        android:padding="15dp"
                        android:hint="Deskripsikan tentang pekerjaanmu.."
                        android:textColorHint="@color/gray_1"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"/>

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:background="@drawable/bg_et_form_profile"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_form"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="2dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/orange_primary"
                    app:strokeWidth="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="38dp"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingVertical="15dp"
                    android:text="Tambah Pengalaman Kerja"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_primary"
                    android:textSize="16sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/orange_primary"
                    app:strokeWidth="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="38dp"
                    android:backgroundTint="@color/orange_primary"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingVertical="15dp"
                    android:text="Simpan"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/orange_primary"
                    app:strokeWidth="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingVertical="15dp"
                    android:text="Batal"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_primary"
                    android:textSize="16sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_edit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
