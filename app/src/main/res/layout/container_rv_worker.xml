<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/bg_search"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_search"
            android:backgroundTint="@color/background_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_profile"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Charles Darwin"
            android:textColor="@color/black_gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile" />

        <TextView
            android:id="@+id/tv_role_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Web Developer"
            android:textColor="@color/gray_2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_profile" />

        <GridLayout
            android:id="@+id/ll_skill_view"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:columnCount="3"
            android:maxWidth="128dp"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile">

            <TextView
                android:id="@+id/tv_skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search"
                android:backgroundTint="@color/orange_primary"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="php"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_skill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_search"
                android:backgroundTint="@color/orange_primary"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="javascript"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_skill_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/open_sans_regular"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="10+"
                android:textColor="@color/gray_2"
                android:textSize="10dp" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
