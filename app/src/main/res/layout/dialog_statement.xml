<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:paddingHorizontal="50dp"
        android:elevation="5dp"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/ic_isSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_isSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/open_sans_bolditalic"
            android:text="Success!"
            android:textColor="@color/black_gray2"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ic_isSuccess"
            app:layout_constraintStart_toStartOf="@id/ic_isSuccess"
            app:layout_constraintTop_toBottomOf="@id/ic_isSuccess" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
